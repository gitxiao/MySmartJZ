<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/iv_vpi_news_listview_item_pic"
        android:src="@drawable/pic_item_list_default"
        android:background="#000000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="60dp"
        android:layout_width="100dp"/>
    
    <TextView 
        android:id="@+id/tv_vpi_news_listview_item_title"
        android:layout_toRightOf="@id/iv_vpi_news_listview_item_pic"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字信息"/>
    
    <TextView 
        android:id="@+id/tv_vpi_news_listview_item_time"
		android:layout_alignLeft="@id/tv_vpi_news_listview_item_title" 		
		android:layout_below="@+id/tv_vpi_news_listview_item_title"
		android:text="更新时间"        
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    
<!--         android:layout_toRightOf="@id/tv_vpi_news_listview_item_time" -->
    <ImageView android:id="@+id/iv_vpi_news_listview_item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_news_comment_num"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>
